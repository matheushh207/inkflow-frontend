// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id            String         @id @default(uuid())
  name          String
  slug          String         @unique
  logoUrl       String?
  primaryColor  String         @default("#FFD700")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  users         User[]
  clients       Client[]
  appointments  Appointment[]
  inventory     InventoryItem[]
  budgets       Budget[]
  financial     FinancialRecord[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(ARTIST)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  appointments Appointment[]
}

enum UserRole {
  ADMIN
  ARTIST
  RECEPTIONIST
}

model Client {
  id           String        @id @default(uuid())
  name         String
  email        String?
  phone        String
  instagram    String?
  status       ClientStatus  @default(ACTIVE)
  score        Int           @default(50)
  lastTattoo   DateTime?
  totalSpent   Decimal       @default(0) @db.Decimal(10, 2)
  tenantId     String
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

enum ClientStatus {
  ACTIVE
  VIP
  RISK
  INACTIVE
}

model Appointment {
  id          String            @id @default(uuid())
  date        DateTime
  duration    Int               // in minutes
  status      AppointmentStatus @default(PENDING)
  clientId    String
  client      Client            @relation(fields: [clientId], references: [id])
  userId      String
  artist      User              @relation(fields: [userId], references: [id])
  tenantId    String
  tenant      Tenant            @relation(fields: [tenantId], references: [id])
  value       Decimal           @db.Decimal(10, 2)
  commission  Decimal           @db.Decimal(10, 2)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

enum AppointmentStatus {
  PENDING
  WAITING_DEPOSIT
  CONFIRMED
  FINISHED
  CANCELLED
}

model InventoryItem {
  id        String   @id @default(uuid())
  name      String
  category  String
  stock     Int      @default(0)
  minStock  Int      @default(5)
  unit      String
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Budget {
  id        String       @id @default(uuid())
  title     String
  clientName String
  value     Decimal?     @db.Decimal(10, 2)
  status    BudgetStatus @default(NEW)
  source    String?
  tenantId  String
  tenant    Tenant       @relation(fields: [tenantId], references: [id])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum BudgetStatus {
  NEW
  ANALYZING
  DEPOSIT_PAID
  SCHEDULED
}

model FinancialRecord {
  id        String      @id @default(uuid())
  type      FinanceType
  amount    Decimal     @db.Decimal(10, 2)
  date      DateTime    @default(now())
  category  String
  method    String
  tenantId  String
  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum FinanceType {
  INCOME
  EXPENSE
}
